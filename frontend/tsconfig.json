{
    "compilerOptions": {
        "sourceMap": true,
        "pretty": true,
        "module": "commonjs",
        "target": "ES6",
        "jsx": "React",
        "experimentalDecorators": true
    },
    "files": [
        "typings/index.d.ts",
        "src/scripts/actions/actions.ts",
        "src/scripts/actions/registration.ts",
        "src/scripts/reducers/currentUser.ts",
        "src/scripts/reducers/reducer.ts",
        "src/scripts/reducers/registration.ts",
        "src/scripts/sagas/saga.ts",
        "src/index.tsx",
        "src/scripts/components/AuthorizedWrapper.tsx",
        "src/scripts/components/Routes.tsx",
        "src/scripts/components/UnauthorizedWrapper.tsx",
        "src/scripts/pages/Feed.tsx",
        "src/scripts/pages/NotFound.tsx",
        "src/scripts/pages/Register.tsx",
        "src/scripts/pages/SignIn.tsx"
    ],
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "!node_modules/**"
